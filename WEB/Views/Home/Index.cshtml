@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>System for testing students</h1>

</div>

<div class="row">
    <div class="col-md-4">
        <h3>
            <span class="glyphicon glyphicon-user">
            </span> Check out our students
        </h3>
        <p class="lead">
            <button type="button" class="btn btn-default"> @Html.ActionLink("See the student groups", "StudentGroups", "StudentGroup")</button>
        </p>
    </div>

    <div class="col-md-4">
        <h3>
            <span class="glyphicon glyphicon-list-alt">
            </span> Thematic fields for students
        </h3>
        <p class="lead">
            <button type="button" class="btn btn-default"> @Html.ActionLink("See the thematic fields", "ThematicFields", "ThematicField")</button>
        </p>
    </div>

    <div class="col-md-4">
        <h3>
            <span class="glyphicon glyphicon-pencil">
            </span> Tests
        </h3>
        <p class="lead">
            <button type="button" class="btn btn-default"> @Html.ActionLink("See the given tests", "TestPrefaces", "TestPreface")</button>
        </p>
    </div>

</div>
